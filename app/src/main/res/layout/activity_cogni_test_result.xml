<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:id="@+id/tableLayout"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp">

                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Шкала"
                        android:gravity="center"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Баллы"
                        android:gravity="center"
                        android:textStyle="bold" />
                </TableRow>

            </TableLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/note"
                android:layout_marginTop="20dp"
                android:textColor="@color/textColor"
                android:layout_below="@+id/tableLayout"
                android:textSize="14sp"
                android:justificationMode="inter_word"
                android:layout_marginHorizontal="20dp"
                android:id="@+id/textView_note"
                />
            <TextView
                android:id="@+id/AKTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:text="Персонализация"
                android:textColor="@color/textColor"
                android:textSize="14sp"
                android:layout_below="@+id/textView_note"
                android:layout_marginTop="30dp"/>
            <ProgressBar
                android:id="@+id/progressBar1"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="40"
                android:progress="0"
                android:layout_below="@+id/AKTextView"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="20dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/progressBar1"
                android:id="@+id/range1">

                <TextView
                    android:id="@+id/textViewStart"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="1-1.2"
                    android:textColor="@color/textColor"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textViewMiddle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="1.2-4"
                    android:textColor="@color/textColor"
                    android:textSize="14sp" />
            </LinearLayout>
            <TextView
                android:id="@+id/BOTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:text="Чтение мыслей"
                android:textColor="@color/textColor"
                android:textSize="14sp"
                android:layout_below="@+id/range1"
                android:layout_marginTop="30dp"/>
            <ProgressBar
                android:id="@+id/progressBar2"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="40"
                android:progress="0"
                android:layout_below="@+id/BOTextView"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="20dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/progressBar2"
                android:id="@+id/range2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="1-1.7"
                    android:textColor="@color/textColor"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="1.8-4"
                    android:textColor="@color/textColor"
                    android:textSize="14sp" />
            </LinearLayout>
            <TextView
                android:id="@+id/TOTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:text="Упрямство"
                android:textColor="@color/textColor"
                android:textSize="14sp"
                android:layout_below="@+id/range2"
                android:layout_marginTop="30dp"/>
            <ProgressBar
                android:id="@+id/progressBar3"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="40"
                android:progress="0"
                android:layout_below="@+id/TOTextView"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="20dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/progressBar3"
                android:id="@+id/range3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="1-2.3"
                    android:textColor="@color/textColor"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="2.4-4"
                    android:textColor="@color/textColor"
                    android:textSize="14sp" />
            </LinearLayout>
            <TextView
                android:id="@+id/PATextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:text="Морализация"
                android:textColor="@color/textColor"
                android:textSize="14sp"
                android:layout_below="@+id/range3"
                android:layout_marginTop="30dp"/>
            <ProgressBar
                android:id="@+id/progressBar4"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="40"
                android:progress="0"
                android:layout_below="@+id/PATextView"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="20dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/progressBar4"
                android:id="@+id/range4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="1-2.5"
                    android:textColor="@color/textColor"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="2.6-4"
                    android:textColor="@color/textColor"
                    android:textSize="14sp" />
            </LinearLayout>
            <TextView
                android:id="@+id/CNTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:text="Катастрофизация"
                android:textColor="@color/textColor"
                android:textSize="14sp"
                android:layout_below="@+id/range4"
                android:layout_marginTop="30dp"/>
            <ProgressBar
                android:id="@+id/progressBar5"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="40"
                android:progress="0"
                android:layout_below="@+id/CNTextView"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="20dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/progressBar5"
                android:id="@+id/range5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="1-1.7"
                    android:textColor="@color/textColor"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="1.8-4"
                    android:textColor="@color/textColor"
                    android:textSize="14sp" />
            </LinearLayout>
            <TextView
                android:id="@+id/YCTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:text="Выученная беспомощность"
                android:textColor="@color/textColor"
                android:textSize="14sp"
                android:layout_below="@+id/range5"
                android:layout_marginTop="30dp"/>
            <ProgressBar
                android:id="@+id/progressBar6"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="40"
                android:progress="0"
                android:layout_below="@+id/YCTextView"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="20dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/progressBar6"
                android:id="@+id/range6">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="1-1.6"
                    android:textColor="@color/textColor"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="1.7-4"
                    android:textColor="@color/textColor"
                    android:textSize="14sp" />
            </LinearLayout>
            <TextView
                android:id="@+id/YDTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:text="Максимализм"
                android:textColor="@color/textColor"
                android:textSize="14sp"
                android:layout_below="@+id/range6"
                android:layout_marginTop="30dp"/>
            <ProgressBar
                android:id="@+id/progressBar7"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="40"
                android:progress="0"
                android:layout_below="@+id/YDTextView"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="20dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/progressBar7"
                android:id="@+id/range7">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="1-1.7"
                    android:textColor="@color/textColor"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="1.8-4"
                    android:textColor="@color/textColor"
                    android:textSize="14sp" />
            </LinearLayout>
            <TextView
                android:id="@+id/POTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:text="Преувеличение опасности"
                android:textColor="@color/textColor"
                android:textSize="14sp"
                android:layout_below="@+id/range7"
                android:layout_marginTop="30dp"/>
            <ProgressBar
                android:id="@+id/progressBar8"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="40"
                android:progress="0"
                android:layout_below="@+id/POTextView"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="20dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/progressBar8"
                android:id="@+id/range8">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="1-1.9"
                    android:textColor="@color/textColor"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="2-4"
                    android:textColor="@color/textColor"
                    android:textSize="14sp" />
            </LinearLayout>
            <TextView
                android:id="@+id/LastTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:text="Гипернормативность"
                android:textColor="@color/textColor"
                android:textSize="14sp"
                android:layout_below="@+id/range8"
                android:layout_marginTop="30dp"/>
            <ProgressBar
                android:id="@+id/progressBar9"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="40"
                android:progress="0"
                android:layout_below="@+id/LastTextView"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="20dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/progressBar9"
                android:id="@+id/range9">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="1-2.5"
                    android:textColor="@color/textColor"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="2.6-4"
                    android:textColor="@color/textColor"
                    android:textSize="14sp" />
            </LinearLayout>
            <TextView
                android:id="@+id/testResultText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:justificationMode="inter_word"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="20dp"
                android:layout_below="@id/range9"/>
            <Button
                android:id="@+id/button_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/exitText"
                android:layout_marginTop="30dp"
                android:clickable="true"
                android:textSize="20sp"
                android:background="@drawable/rounded_button"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/testResultText"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/button_close"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.NotificationsFragment" >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/linear_layout">
                <Button
                    android:id="@+id/button_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Поделиться"
                    android:background="@drawable/rounded_button"
                    android:clickable="true"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="30dp"
                    android:gravity="center"
                    />
                <Button
                    android:id="@+id/button_exit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Выход"
                    android:background="@drawable/rounded_button"
                    android:clickable="true"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="30dp"
                    android:gravity="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/linear_layout"
                android:layout_marginTop="20dp"
                android:id="@+id/linear_layout5">
            <Button
                android:id="@+id/patientsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:text="Пациенты"
                android:layout_marginHorizontal="30dp"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"/>
            <Button
                android:id="@+id/chatButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:text="Сообщения"
                android:layout_marginHorizontal="30dp"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"/>
        </LinearLayout>
            <Button
                android:id="@+id/adminButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:text="Зарегистрировать врача"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:clickable="true"
                android:layout_below="@id/linear_layout5"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Таблица с результатами (определение эмоции по лицу)"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_marginTop="50dp"
                android:id="@+id/faceTextView"/>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:id="@+id/emotionTableLayout"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="10dp"
                android:layout_below="@+id/faceTextView">

            </TableLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Таблица с результатами (эмоционального опросника)"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:id="@+id/emotionTextView"
                android:layout_below="@id/emotionTableLayout"/>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:id="@+id/emotionTestTableLayout"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="2dp"
                android:layout_below="@+id/emotionTextView"
                >
            </TableLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Таблица с результатами (когнитивного опросника)"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:id="@+id/cogniTextView"
                android:layout_below="@id/emotionTestTableLayout"/>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:id="@+id/cogniTestTableLayout"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="2dp"
                android:layout_below="@+id/cogniTextView"
                >
            </TableLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@+id/cogniTestTableLayout"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="30dp"
                android:text="Авторизация"
                android:id="@+id/textAuth"/>
            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:layout_marginTop="80dp"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="20dp"/>
            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Пароль"
                android:inputType="textPassword"
                android:layout_below="@id/editTextEmail"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="20dp"/>
            <TextView
                android:id="@+id/reset_password_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Сбросить пароль"
                android:textColor="@color/blue"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/editTextPassword"
                android:layout_marginTop="20dp"
                android:clickable="true"/>
            <Button
                android:id="@+id/buttonContinue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Продолжить"
                android:layout_below="@id/reset_password_text_view"
                android:layout_marginTop="20dp"
                android:layout_marginStart="50dp"/>
            <Button
                android:id="@+id/buttonRegistration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Регистрация"
                android:layout_below="@id/reset_password_text_view"
                android:layout_marginTop="20dp"
                android:layout_marginStart="230dp"
                />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
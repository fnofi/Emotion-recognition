<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CardsActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/change_mindset"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="19sp"
        android:background="@drawable/rounded_text"
        android:padding="9dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/little_reminders"
        android:textAlignment="center"
        android:layout_marginTop="90dp"
        android:textColor="@color/textColor"
        android:textSize="20sp"
        android:justificationMode="inter_word"
        android:layout_marginHorizontal="20dp"
        android:id="@+id/textView_definition"
        />
    <Button
        android:id="@+id/button_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/close_img"
        android:layout_marginStart="350dp"
        android:layout_marginTop="23dp"
        android:clickable="true"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/dark_green"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@+id/textView_definition"
        android:layout_marginTop="20dp"
        app:cardElevation="20dp"
        app:cardCornerRadius="20dp"
        android:id="@+id/card_view">

            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/imageSlider"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:iss_period="3000"
                app:iss_auto_cycle="true"
                app:iss_delay="1000"
                app:iss_corner_radius="20"
                android:layout_centerInParent="true"/>

    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/note"
        android:layout_marginTop="20dp"
        android:textColor="@color/textColor"
        android:layout_below="@+id/card_view"
        android:textSize="14sp"
        android:justificationMode="inter_word"
        android:layout_marginHorizontal="20dp"
        android:id="@+id/textView_note"
        />
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@+id/textView_note"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
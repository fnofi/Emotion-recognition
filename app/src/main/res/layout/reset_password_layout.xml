<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\n\t\t\t\tВведите ваш адрес электронной почты, чтобы мы могли отправить вам инструкции по сбросу пароля. После ввода вашего адреса электронной почты, нажмите кнопку 'Отправить', чтобы завершить процесс сброса пароля.\n"
        android:textSize="14sp"
        android:justificationMode="inter_word"
        android:layout_marginHorizontal="20dp"
        />

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:layout_marginHorizontal="20dp" />

</LinearLayout>
